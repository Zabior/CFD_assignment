    "(k|omega)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.01;
    }
    U
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.0;
    }
}

SIMPLE
{
    residualControl
    {
        p               1e-5;
        U               1e-5;
        "(k|omega|e)"   1e-5;
    }

    nNonOrthogonalCorrectors 2;
    pMinFactor      0.1;
    pMaxFactor      2;
}

