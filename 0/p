FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1.;

boundaryField
{
    Inlet 
    {
        type            totalPressure;
        p0              uniform 1.0158387931980135; // total pressure at the inlet
    }

    Outlet
    {
    //   type             inletOutlet;
    //   inletValue         $internalField;
    //      type            zeroGradient;
    type        fixedValue;
    value       $internalField;
    }


    Side
    {
        type            empty;
    }

    Cylinder 
    {
        type            zeroGradient;
    }
    Wall
    {
        type            zeroGradient;
    }
}


