{
    Inlet
    {
        type            totalTemperature;
        gamma           1.4;
        T0              uniform 1.0045;
    }

    Outlet
    {
        type            zeroGradient;
    }

   Side
    {
        type            empty;
    }

    Cylinder
    {
        type            zeroGradient;
    }

    Wall
    {
        type            zeroGradient;
    }
        Top
    {
        // type            totalTemperature;
        // gamma           1.4;
        // T0              uniform 1.0045;
        type slip;
    }
}

